-- Loading Sequence
local function typeWrite(text, label)
    local displayText = ""
    for i = 1, #text do
        displayText = displayText .. text:sub(i,i)
        label.Text = displayText
        wait(0.02)
    end
end

local function startLoadingSequence()
    local loadingSteps = {
        "Initializing system...",
        "Bypassing security...",
        "Accessing mainframe...",
        "Injecting exploits...",
        "Establishing connection...",
        "System compromised."
    }
    
    for i, step in ipairs(loadingSteps) do
        typeWrite(step, LoadingStatus)
        local progress = i / #loadingSteps
        TweenService:Create(LoadingFill, TweenInfo.new(0.5), {
            Size = UDim2.new(progress, 0, 1, 0)
        }):Play()
        wait(0.5)
    end
    
    wait(0.5)
    
    -- Fade out loading screen and show main interface
    TweenService:Create(LoadingFrame, TweenInfo.new(1), {
        BackgroundTransparency = 1,
        Position = UDim2.new(0.5, -125, 0.6, -85)
    }):Play()
    
    MainFrame.Position = UDim2.new(0.5, -125, 0.4, -85)
    MainFrame.BackgroundTransparency = 1
    MainFrame.Visible = true
    
    TweenService:Create(MainFrame, TweenInfo.new(1), {
        BackgroundTransparency = 0,
        Position = UDim2.new(0.5, -125, 0.5, -85)
    }):Play()
    
    wait(1)
    LoadingFrame:Destroy()
end

-- Scanner Animation
local function animateScanner()
    while true do
        TweenService:Create(ScannerEffect, TweenInfo.new(2, Enum.EasingStyle.Linear), {
            Position = UDim2.new(0, 0, 1, 0)
        }):Play()
        wait(2)
        ScannerEffect.Position = UDim2.new(0, 0, 0, -2)
    end
end

-- Start the interface
startLoadingSequence()
coroutine.wrap(animateScanner)()

